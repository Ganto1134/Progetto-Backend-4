    ViewData["Title"] = "Delete Violazione";
}

<h1>Cancella Violazione</h1>

<h4>Sei sicuro di voler cancellare?</h4>
<div>
    <h4>Tipo di Violazione</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Descrizione)
        </dt>
        <dd class="col-sm-10">
